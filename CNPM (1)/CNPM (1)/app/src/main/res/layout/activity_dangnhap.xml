<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout
    android:background="#FFFFFF"
    tools:context=".dangnhap"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/lnKhungDangNhap"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:text="Đăng nhập"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon"/>

            <EditText
                android:background="@color/white"
                android:layout_height="48dp"
                android:layout_width="0dp"
                android:id="@+id/edtTenDangNhap"
                android:textColor="@color/black"
                android:padding="10dp"
                android:singleLine="true"
                android:hint="tendangnhap"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/password"/>

            <EditText
                android:background="@color/white"
                android:layout_height="48dp"
                android:layout_width="0dp"
                android:id="@+id/edtMatKhau"
                android:textColor="@color/black"
                android:padding="10dp"
                android:hint="matkhau"

                android:layout_weight="1"
                android:inputType="textPassword"/>

        </LinearLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_width="145dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#48dbfb"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="Đồng ý"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="        Bạn chưa có tài khoản? Hãy đăng ký ngay !!!     "
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnDangKy2"
            android:layout_width="145dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#0984e3"
            android:gravity="center"
            android:text="Đăng ký"
            android:textSize="16sp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>