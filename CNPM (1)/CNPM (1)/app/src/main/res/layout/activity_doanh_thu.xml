<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#48dbfb"
            android:drawableStart="@drawable/arrow_back"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#48dbfb"
            android:text="Quản lý doanh thu"
            android:textAlignment="center"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Bộ lọc thời gian -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/startDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:hint="Ngày bắt đầu"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/endDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:hint="Ngày kết thúc"
            android:textSize="20dp" />

        <Button
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#48dbfb"
            android:text="Lọc"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Tổng doanh thu -->
    <TextView
        android:id="@+id/totalRevenue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Tổng doanh thu: 0"
        android:textSize="18sp" />

    <!--    &lt;!&ndash; Danh sách chi tiết doanh thu &ndash;&gt;-->
    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:id="@+id/revenueRecyclerView"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="match_parent" />-->
</LinearLayout>
